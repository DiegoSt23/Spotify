{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@common/*": ["./common/*"],
      "@pages/*": ["./pages/*"],
      "@language/*": ["./language/*"],
      "@theme/*": ["./theme/*"],
      "@routes/*": ["./routes/*"],
      "@store/*": ["./store/*"],
      "@hooks/*": ["./hooks/*"]
    }
  },
  "include": ["vite.config.ts"]
}
